{
  "name": "mapthew",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "docker-compose up",
    "dev:down": "docker-compose down",
    "dev:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r --if-present test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "shared": "pnpm --filter @mapthew/shared",
    "webhook": "pnpm --filter @mapthew/webhook",
    "worker": "pnpm --filter @mapthew/worker",
    "mcp": "pnpm --filter @mapthew/integration-tests-mcp",
    "tunnel": "cloudflared tunnel --config cloudflare-tunnel-config.yml run"
  },
  "devDependencies": {
    "cloudflared": "^0.5.3",
    "typescript": "^5.7.0"
  }
}
