# Redis (change port if 6379 conflicts with another project)
REDIS_PORT=6379

# Webhook server
WEBHOOK_PORT=3000
VERBOSE_LOGS=true

# Azure Key Vault
# Local dev uses Lowkey Vault via Docker Compose (docker-internal addresses)
AZURE_KEYVAULT_URL=https://lowkey-vault:8443
AZURE_IDENTITY_ENDPOINT=http://lowkey-vault:8080/metadata/identity/oauth2/token
AZURE_IDENTITY_HEADER=dummy

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_AUDIENCE=https://your-api-identifier

# JIRA labels (Claude handles via MCP)
# JIRA_LABEL_ADD=claude-processed     # Label to add when done
# JIRA_LABEL_TRIGGER=claude-ready      # Label to remove when done

# Session persistence (optional)
# WORKSPACES_DIR=/tmp/${BOT_NAME:-mapthew}-workspaces  # Where sessions are stored (default: /tmp/{botName}-workspaces)
# MAX_SESSIONS=5                                       # Soft cap â€” oldest session evicted when exceeded (default: 5)
# PRUNE_THRESHOLD_DAYS=7                               # Sessions inactive longer than this are pruned (default: 7)
# PRUNE_INTERVAL_DAYS=7                                # How often the pruning job runs (default: 7 = weekly)

# Anthropic
CLAUDE_MODEL=claude-sonnet-4-6

###############################################
# Local Testing (requests.http)
# 
# This must be in .env instead of .env.local because it's used
# by the requests.http file and $dotenv only reads .env
###############################################

# JIRA Webhook signature for requests.http (autopopulated using pnpm requests:init)
REQUESTS_HTTP_JIRA_WEBHOOK_SIGNATURE=
