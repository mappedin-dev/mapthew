# Redis (change port if 6379 conflicts with another project)
REDIS_PORT=6379

# Webhook server
WEBHOOK_PORT=3000

# JIRA
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_EMAIL=you@company.com
JIRA_API_TOKEN=

# Optional: JIRA webhook secret for security
# JIRA_WEBHOOK_SECRET=

# GitHub
GITHUB_TOKEN=
# Optional: GitHub webhook secret for security
# GITHUB_WEBHOOK_SECRET=

# Anthropic
ANTHROPIC_API_KEY=
CLAUDE_MODEL=opus

# Session persistence (optional)
# WORKSPACES_DIR=/tmp/dexter-workspaces  # Where local sessions are stored
# MAX_SESSIONS=5                          # Max concurrent sessions
# SESSION_POLL_INTERVAL_MS=5000           # Polling interval when waiting for slot

# S3 Session Storage (optional - enables session archiving to S3)
# When enabled, sessions are archived to S3 after job completion and
# restored before processing to enable context sharing across jobs.
# S3_SESSIONS_BUCKET=my-dexter-sessions   # S3 bucket name (required to enable)
# S3_SESSIONS_REGION=us-east-1            # S3 region (defaults to AWS_REGION or us-east-1)
# S3_SESSIONS_PREFIX=sessions             # S3 key prefix (defaults to "sessions")
# S3_ENDPOINT=http://localhost:4566       # Custom endpoint for localstack/minio testing
